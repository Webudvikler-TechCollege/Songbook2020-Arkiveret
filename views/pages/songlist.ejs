<!-- views/pages/sange.ejs -->
<%- include ('../partials/header') %>    

    <h1><%= title %></h1>
    <p><%= content %></p>

    <p>
        Sortering: 
        <a href="/a-z/">A - Å</a> |
        <a href="/z-a/">Å - A</a> |   
        <a href="/art-a-z/">Artist A - Å</a> |   
        <a href="/art-z-a/">Artist Å - A</a> |   
    </p>

    <hr>

    <p><b>Filtrer sange</b>
        <input type="text" value="" id="my_filter_input" onkeyup="search_filter()">
        <button type="button">Søg</button>
    </p>

    <hr>

    <p><b>Søg i sange</b>
        <form method="post" action="/search">
            <input type="text" name="keyword" value="" id="key">
            <button type="submit">Søg</button>
        </form>
    </p>

    <hr>

    <ul class="list" id="songlist">
    <% songlist.forEach(function(song) { %>
        <li><a href="/details/<%= song.id %>"><%= song.title %></a> - <%= song.artist_name %></li>
    <% }); %> 
    </ul>

<%- include ('../partials/footer') %>